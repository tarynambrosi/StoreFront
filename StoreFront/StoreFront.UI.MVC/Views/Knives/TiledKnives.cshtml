@model IEnumerable<StoreFront.DATA.EF.Models.Knife>

@{
    ViewData["Title"] = "TiledKnives";
}

<div class="watchs_section layout_padding">
    <div class="container">
        <h1 class="watchs_taital">Our Knives</h1>
        <p class="text-right">
            
            <a asp-action="Index" class="btn btn-success">Table View</a>
        </p>
        @foreach (var item in Model)
        {
        <div class="watchs_section_2">
            <div class="row">
                <div class="col-md-6">
                    <div class="image_1"><img src="~/images/@item.KnifeImage" alt="@item.KnifeType"></div>
                </div>
                <div class="col-md-6">
                    <h4 class="uni_text">@item.KnifeType</h4>
                    <p class="watchs_text">@Html.DisplayFor(modelItem => item.KnifeBrand.BrandName)</p>
                        <h4 class="rate_text"><span style="color: #b60213;"></span>@Html.DisplayFor(modelItem => item.KnifePrice)</h4>
                    <div class="read_bt1 pb-3"><a href="javascript:void(0)">Add To Cart</a></div>
                </div>
            </div>
        </div>
        }
        <p class="text-center">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary" style="margin-top: 50px;">Add a New Knife</a>
            }
        </p>
        </div>
        </div>

