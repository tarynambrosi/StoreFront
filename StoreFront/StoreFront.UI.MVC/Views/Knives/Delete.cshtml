@model StoreFront.DATA.EF.Models.Knife

@{
    ViewData["Title"] = "Delete a Knife";
}

@* <h1>Delete</h1> *@

<div class="watchs_section layout_padding">
    <div class="container">
        <h1 class="watchs_taital">Delete @Model.KnifeType?</h1>
        <div class="watchs_section_2">
            <div class="row">
                <div class="col-md-6">
                    <div class="image_1"><img src="#"></div>
                </div>
                <div class="col-md-6">
                    <h4 class="uni_text">@Model.KnifeType</h4>
                    <p class="watchs_text">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2" style="color: #fff;">
                                    @Html.DisplayNameFor(model => model.KnifeType)
                                </dt>
                                <dd class="col-sm-10" style="color: #fff;">
                                    @Html.DisplayFor(model => model.KnifeType)
                                </dd>
                                <dt class="col-sm-2" style="color: #fff;">
                                @Html.DisplayNameFor(model => model.KnifePrice)
                                </dt>
                                <dd class="col-sm-10" style="color: #fff;">
                                @Html.DisplayFor(model => model.KnifePrice)
                                </dd> 
                                <dt class="col-sm-2" style="color: #fff;">
                                    @Html.DisplayNameFor(model => model.Category)
                                </dt>
                                <dd class="col-sm-10" style="color: #fff;">
                                    @Html.DisplayFor(model => model.Category.CategoryName)
                                </dd>
                                <dt class="col-sm-2" style="color: #fff;">
                                    @Html.DisplayNameFor(model => model.KnifeBrand.BrandName)
                                </dt>
                                <dd class="col-sm-10" style="color: #fff;">
                                    @Html.DisplayFor(model => model.KnifeBrand.BrandName)
                                </dd>

                            </dl>
                        </div>
                    </p>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </div>
<div class="form-group">
    <form asp-action="Delete">
        <input type="hidden" asp-for="KnifeId" />
        <a asp-action="Index">Back to Knives</a>
    </form>
</div>
